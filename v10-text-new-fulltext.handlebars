{{!-- News Detail Hero Section --}}
<div class="hero--basic hero--news global-padding--15x bg--dark">
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="cell auto">
        <div class="hero--basic__text text-margin-reset">
          <h1>
            {{{publish element="Title"}}}
          </h1>
          <div class="eyebrow">
            {{#ifSet element="News Types" ~}}
              <a href="{{nav id="991" name="Link to News & Stories"}}?newsTypes={{value}}">{{value}}></a>
            {{/ifSet}}
          </div>
          

          <div class="news--detail__details global-spacing--0x text-margin-reset">
            {{#ifSet element="Author"}}
            <p>
              <strong>Written by {{{publish element="Author"}}}</strong>
            </p>
            {{/ifSet}}
            
            <p>
              {{dateFormat (dateElement element="Publish Date") "EEEE, MMMM d, yyyy"}}
            </p>
          </div>

          {{nav id="1027" name="Breadcrumbs Fulltext"}}
        </div>
      </div>
    </div>

    {{#ifSet element="Media Library Image"}}
    <div class="news--detail__hero-photo">
      <figure class="aspect-ratio-frame" style="--aspect-ratio: 74/116">
        <img 
          loading="eager" 
          sizes="(min-width: 1280px) 1160px, calc(93.75vw - 21px)"
          src="{{{publish element="Media Library Image" output="normal" formatter="v10/image/pxl-crop" cdn="true" pxl-filter-id="43"}}}"
          srcset="
            {{{publish element="Media Library Image" output="normal" formatter="v10/image/pxl-crop" cdn="true" pxl-filter-id="43"}}} 500w,
            {{{publish element="Media Library Image" output="normal" formatter="v10/image/pxl-crop" cdn="true" pxl-filter-id="42"}}} 768w,
            {{{publish element="Media Library Image" output="normal" formatter="v10/image/pxl-crop" cdn="true" pxl-filter-id="41"}}} 1160w"
          alt="{{{publish element="Image Caption"}}}"
          class="js-processed"
        />
        
        {{#ifSet element="Image Caption"}}
        <figcaption>
          <blockquote>
            {{{publish element="Image Caption"}}}
          </blockquote>
        </figcaption>
        {{/ifSet}}
      </figure>
    </div>
    {{/ifSet}}
  </div>
</div>

{{!-- News Detail Body --}}
<div class="news--detail__body grid-container global-padding--10x">
  <div class="grid-x grid-margin-x">
    <div class="cell medium-8">
      {{#ifSet element="Article Subhead"}}
      <div class="news--detail__summary text-margin-reset">
        <p class="intro-text">
          {{{publish element="Article Subhead"}}}
        </p>
      </div>
      {{/ifSet}}
      
      <div class="global-spacing--5x">
        <div class="wysiwyg">
          {{{publish element="Story article"}}}
        </div>
      </div>
      
      <div class="global-spacing--3x">
        {{#ifSet element="News Topics"}}
        <div class="tags tags__links">
          <h2 class="tags__heading show-for-sr">Tags:</h2>
          <ul>
            {{#each (selected element="News Topics") ~}}
              <li>
                <a href="{{nav id="991" name="Link to News & Stories"}}?newsTopics={{value}}">{{value}}</a>
              </li>
            {{/each}}
          </ul>
        </div>
        {{/ifSet}}
      </div>
    </div>
    
    <div class="cell medium-4">
      {{#ifSet element="Callout Title"}}
      <article class="callout text-margin-reset oho-animate oho-animate-single fade-in oho-animate--in">
        <h2 class="h6">
          {{{publish element="Callout Title"}}}
        </h2>

        <div class="global-spacing--2x">
          <p>
            {{{publish element="Callout Description"}}}
          </p>
        </div>
        
        <div class="global-spacing--3x">
          <a href="{{{publish element="Callout CTA Internal Link" output="linkurl" modifiers="nav_sections"}}}{{{publish element="Callout CTA External Link"}}}" class="btn">
            {{{publish element="Callout CTA Title"}}}
          </a>
        </div>
      </article>
      {{/ifSet}}
    </div>
  </div>
</div>

