{{! v10/text/carousel/centralized }}
<li class="swiper-slide oho-animate fade-in-up centralized">
  <article class="news-story--item">
    {{#ifSet element="Media Library Image"}}
      <figure class="aspect-ratio-frame" style="--aspect-ratio: 24/38">
        {{embed layout="v10/text/carousel/centralized-image"}}
      </figure>
    {{/ifSet}}
    <div class="news-story__text text-margin-reset">
      <h3 class="h5 funderline">{{{fulltext linkText=(publish element="Title")}}}</h3>
      {{#ifSet element="News Types" ~}}
        {{#each (selected element="News Types") ~}}
          {{#if @first}}
            <div class="eyebrow">{{value}}</div>
          {{/if}}
        {{~/each}}
      {{/ifSet}}
      {{#ifSet element="Article Subhead" ~}}
        <div class="global-spacing--2x">
          {{publish element="Article Subhead"}}
        </div>
      {{/ifSet}}
    </div>
  </article>
</li>